        <script><![CDATA[(function executeRule(current, previous) {
	var infoGr = new GlideRecord("x_1122522_pfc_employee_info");
	var user;
	if (current.isNewRecord()) {
		user = current.user;
	} else {
		user = previous.user;
	}
	
	infoGr.addQuery("user", user);
	infoGr.query();
	
	if (infoGr.next() && current.isNewRecord()) {
		gs.addErrorMessage("Info record already exists");
		current.setAbortAction(true);
	} else if (!current.isNewRecord() && current.user != previous.user) {
		var existingEmployeesGR = new GlideRecord("x_1122522_pfc_employee_info");
		existingEmployeesGR.addQuery("user", current.user);
		existingEmployeesGR.query();
		
		gs.addInfoMessage(existingEmployeesGR.getRowCount());
		
		if (existingEmployeesGR.getRowCount() > 0) {
			gs.addErrorMessage("Info record already exists");
			current.setAbortAction(true);
		}
	}
})(current, previous);]]></script>
